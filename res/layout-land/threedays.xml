<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/threeDaysRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <it.giacomos.android.wwwsapp.widgets.MapWithForecastImage
        android:id="@+id/threeDaysImageView"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/shape_background_landscape"
        android:src="@drawable/fvg_background2" />

    <ScrollView
        android:id="@+id/textViewScroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0" >

        <it.giacomos.android.wwwsapp.widgets.ForecastTextView
            android:id="@+id/threeDaysTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </ScrollView>

</LinearLayout>