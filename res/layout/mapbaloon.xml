<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapbaloon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mapbaloon_inner_linlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/baloon_title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1.0"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
 	
 	<ImageView
 	    android:id="@+id/baloon_icon"
 	    style="@style/ImageView"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_gravity="center_vertical|center_horizontal"
 	    android:gravity="center_vertical|center_horizontal"
 	    android:contentDescription="@string/not_available"
 	    android:scaleType="center"
 	    android:color="#0000FF00" />
    
 	</LinearLayout>
 	
    <TextView
        android:id="@+id/baloon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

</LinearLayout>
