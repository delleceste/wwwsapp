<?xml version="1.0" encoding="utf-8"?>

   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical" > 
    
    <LinearLayout
        android:id="@+id/layout_tutorial_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvAuthorizedToGetPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/tutorial_publish_request"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvPublishRequest1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/tutorial_textview_background"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/map_pin_orange"
            android:padding="8dp"
            android:text="@string/quickstart_publish1" />

        <TextView
            android:id="@+id/TextViewPublishFromActiveUsersMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/tutorial_textview_background"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/map_tilt_tutorial_icon"
            android:padding="8dp"
            android:text="@string/quickstart_publish_from_active_user" />

        <TextView
            android:id="@+id/tvPublishRequest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/tutorial_textview_background"
            android:drawableTop="@drawable/map_pin_green"
            android:padding="8dp"
            android:text="@string/quickstart_publish2" />
    
    </LinearLayout>
    </ScrollView>